.search-list-container(ng-click = 'searchListItemClicked($index)' , ng-class = "{'search-item-active':selectedSearchItem == $index}")
  .search-list-contents
    .search-item-left
      a(target = "_blank" ng-href = "{{pool.profileUrl}}")
        img.media-object.img-circle(ng-src="{{pool.profilePicUrl ? pool.profilePicUrl : 'img/defaults/profile.png'}}", style='max-width:50px', alt='customer image')
    .search-item-right
      div(style='font-weight:bold;')
        a(  target = "_blank" ng-href = "{{pool.profileUrl}}") {{pool.name}}
        //span.pull-right(title='Facebook Profile')
          //a( target = "_blank" ng-href = "{{pool.profileUrl}}" style='cursor:pointer')
            //img(src = "img/defaults/facebook.png")
      
      div
        a( href = 'mailto: {{pool.email}}',ng-bind = 'pool.email' target="_blank")
      div.search-item-meta
        ul.list-inline
          li(ng-bind = "pool.date")
          li(ng-bind = "pool.time")
      div(ng-show="pool.cost").search-item-meta
        | Cost : {{pool.cost}}

