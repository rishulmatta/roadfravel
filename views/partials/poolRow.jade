.search-list-container
  .row.search-item-row(ng-click = 'searchListItemClicked($index)')
    .col-lg-3
      img.img-circle(ng-src="{{pool.profilePicUrl ? pool.profilePicUrl : 'img/defaults/profile.png'}}", style='max-width:50px', alt='customer image')
    .col-lg-9
      div(style='font-weight:bold;')
        a {{pool.name}}
        span.pull-right(title='Facebook Profile')
          a( target = "_blank" ng-href = "{{pool.profileUrl}}" style='cursor:pointer')
            img(src = "img/defaults/facebook.png")
      div.contact
        div(ng-bind = 'pool.email')
        div(ng-bind = "pool.date")
      div.contact
        div.time(ng-bind = "pool.time")     
      div {{pool.Address}} {{pool.Country}} {{pool.ZipCode}}
